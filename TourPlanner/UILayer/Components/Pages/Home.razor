@page "/"

<PageTitle>Home</PageTitle>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js" crossorigin="anonymous"></script>


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="text-center">
                <h2>Erster Teil</h2>
            </div>
            <!-- Linker/Erster Teil -->
            <form action="/deine/action/url" method="post" class="p-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="from" class="form-label">From:</label>
                        <input type="text" id="from" name="from" class="form-control">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="to" class="form-label">To:</label>
                        <input type="text" id="to" name="to" class="form-control">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="tourname" class="form-label">Tourname:</label>
                    <input type="text" id="tourname" name="tourname" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="tourdescription" class="form-label">TourDescription:</label>
                    <textarea id="tourdescription" name="tourdescription" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-danger">Submit</button>
                <button type="submit" class="btn btn-primary">Reset</button>
            </form>

            <form action="#" method="get" class="mb-3" style="margin-top:20px">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Suchen..." name="q">
                    <button type="submit" class="btn btn-primary">
                        Search
                    </button>
                </div>
            </form>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Column 1</th>
                        <th scope="col">Column 2</th>
                        <th scope="col">Column 3</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Example Data 1</td>
                        <td>Example Data 2</td>
                        <td>Example Data 3</td>
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="col-md-6">
            <!-- Zweiter Teil der Seite -->
            <div class="text-center">
                <h2>Zweiter Teil</h2>
            </div>
            <!-- Platzhalter für die Karte -->
            <div id="map" style="height: 300px; background-color: lightgray;"> </div>
        </div>
    </div>
</div>







